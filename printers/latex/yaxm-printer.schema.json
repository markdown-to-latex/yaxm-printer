{
    "$schema": "https://json-schema.org/draft-07/schema",
    "title": "YAXM Latex Printer Config",
    "description": "Configuration Schema for Latex Printer for Yet Another eXtended Markdown",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "defaultAutoEscapes": {
            "type": "boolean",
            "description": "Auto-escape default characters (%, #, $, _)",
            "default": true
        },
        "extendAutoEscapes": {
            "type": "array",
            "description": "Words to escape",
            "items": {
                "$ref": "#/definitions/LatexEscapeData"
            },
            "default": []
        },
        "useLinkAs": {
            "type": "string",
            "description": "How to interpret markdown Link?",
            "enum": ["monospace", "quotes", "bold", "underline", "italic"],
            "default": "underline"
        },
        "useCodeSpanAs": {
            "type": "string",
            "description": "How to interpret markdown CodeSpan?",
            "enum": ["monospace", "quotes", "bold", "underline", "italic"],
            "default": "quotes"
        },
        "margin": {
            "$ref": "#/definitions/LatexMarginInfo"
        }
    },
    "required": [],
    "additionalProperties": false,
    "definitions": {
        "LatexEscapeData": {
            "type": "object",
            "description": "Word (that must be escaped) data",
            "properties": {
                "chars": {
                    "type": "array",
                    "description": "List of words to escape. Replacing is being done case insensitively",
                    "items": {
                        "type": "string",
                        "description": "Word to escape. Replacing is being done case insensitively",
                        "minLength": 1
                    },
                    "minItems": 1
                },
                "replacer": {
                    "type": "string",
                    "description": "Replacer RegExp string",
                    "examples": ["\\$1", "\\something{$1}"],
                    "default": "\\$1"
                },
                "inText": {
                    "type": "boolean",
                    "description": "Escape words in plain text",
                    "default": true
                },
                "inCodeSpan": {
                    "type": "boolean",
                    "description": "Escape words in code span",
                    "default": true
                },
                "inLink": {
                    "type": "boolean",
                    "description": "Escape words inside a link",
                    "default": true
                }
            },
            "additionalProperties": false,
            "required": ["chars"]
        },
        "LatexMarginInfo": {
            "type": "object",
            "description": "Information about LaTeX margins",
            "properties": {
                "imageInnerTextSep": {
                    "type": "string",
                    "description": "Figure: Inner Text Separator",
                    "default": "3em"
                },
                "imageBelowCaptionSkip": {
                    "type": "string",
                    "description": "Figure: Below Caption Skip",
                    "default": "-4ex"
                },
                "imageRemovedBelowCaptionSkip": {
                    "type": "string",
                    "description": "Figure: Removed Below Caption Skip",
                    "default": "-1.6em"
                },
                "imageAboveCaptionSkip": {
                    "type": "string",
                    "description": "Figure: Above Caption Skip",
                    "default": "-0.5em"
                },
                "codeInnerTextSep": {
                    "type": "string",
                    "description": "Figure: Inner Text Separator",
                    "default": "3em"
                },
                "codeBelowCaptionSkip": {
                    "type": "string",
                    "description": "Figure: Below Caption Skip",
                    "default": "-4ex"
                },
                "codeRemovedBelowCaptionSkip": {
                    "type": "string",
                    "description": "Figure: Removed Below Caption Skip",
                    "default": "-1.6em"
                },
                "codeAboveCaptionSkip": {
                    "type": "string",
                    "description": "Figure: Above Caption Skip",
                    "default": "-0.5em"
                },
                "tableBelowCaptionSkip": {
                    "type": "string",
                    "description": "LongTable: Below Caption Skip",
                    "default": "0em"
                },
                "tableAboveCaptionSkip": {
                    "type": "string",
                    "description": "LongTable: Above Caption Skip",
                    "default": "0em"
                },
                "tablePre": {
                    "type": "string",
                    "description": "LongTable: Pre",
                    "default": "2em"
                },
                "tablePost": {
                    "type": "string",
                    "description": "LongTable: Post",
                    "default": "2em"
                },
                "tableRemovedPost": {
                    "type": "string",
                    "description": "LongTable: Removed Post Space",
                    "default": "0em"
                },
                "mathAboveDisplaySkip": {
                    "type": "string",
                    "description": "Code: Above Display Skip",
                    "default": "-0.9em"
                },
                "mathBelowDisplaySkip": {
                    "type": "string",
                    "description": "Code: Below Display Skip",
                    "default": "0pt"
                },
                "mathAboveDisplayShortSkip": {
                    "type": "string",
                    "description": "Code: Above Display Short Skip",
                    "default": "0pt"
                },
                "mathBelowDisplayShortSkip": {
                    "type": "string",
                    "description": "Code: Below Display Short Skip",
                    "default": "0pt"
                }
            },
            "required": [],
            "additionalProperties": false
        }
    }
}
